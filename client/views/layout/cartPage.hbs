    {{#if condition}}
    <div class="ui container">
        <h1>Chưa có món nào trong giỏ hàng</h1>
    </div>
    {{else}}
    <div class="ui container">
        <div class="section text-center">
            <div class="row">
                <div class="col-md-4">
                    <h2 class="card-title">Tiền đặt hàng : {{sum}}đ</h2>
                    <br />
                    <button class="ui button red">Tiến hành đặt hàng</button>
                </div>
                <div class="col-md-8">
                    <h2 class="title">Giỏ Hàng của bạn</h2>
                    <div class="team">
                        <div class="row">
                            <div class="ui special cards">
                                {{#each carts}}
                                <div class="col-md-4">
                                    <div class="team-player">
                                        <div class="card card-plain">
                                            <div class="blurring dimmable image">
                                                <div class="ui dimmer">
                                                    <div class="content">
                                                        <div class="center">
                                                            <div class="ui inverted button">Add Friend</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 ml-auto mr-auto">

                                                    <img src={{this.image}} alt="Thumbnail Image"
                                                        class="img-raised img-fluid">

                                                </div>
                                            </div>
                                            <a href="/product">

                                                <h4 class="card-title">{{this.name}}
                                                    <br>

                                                </h4>
                                            </a>
                                            <a href="/categories/sport">
                                                <div class="card-description text-muted">{{this.type}}</div>
                                            </a>
                                            <div class="card-body">
                                                <p class="card-description">
                                                    {{this.price}}
                                                </p>

                                            </div>
                                            <div class="card-footer justify-content-center">

                                                <button class="ui button tiny">
                                                    <i class="plus  icon tiny"></i>
                                                </button>
                                                <div class="ui button blue tiny">
                                                    {{this.number}}
                                                </div>
                                                <button class="ui button tiny">
                                                    <i class="minus icon tiny"></i>
                                                </button>
                                                <button class="ui button red tiny">
                                                    Xóa
                                                </button>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    {{/if}}
</body>